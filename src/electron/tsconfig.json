{
	"compilerOptions": {
		// require strict types (null-save)
		"strict": true,
		// target ES2020 for Electron compatibility
		"target": "ES2020",
		// use CommonJS for Electron preload scripts
		"module": "CommonJS",
		// use Node.js module resolution
		"moduleResolution": "node",
		// define where to put generated JS
		"outDir": "../../dist-electron",
		// ignore errors from dependencies
		"skipLibCheck": true,
		// add global types - include node for process global
		"types": ["../ui/types", "node"],
		// isolated modules for better performance
		"isolatedModules": true
	},
	"include": ["main.ts", "preload.ts"]
}
