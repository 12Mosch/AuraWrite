{
	"name": "aurawrite",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"main": "dist-electron/main.cjs",
	"scripts": {
		"dev:react": "vite",
		"dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
		"dev": "npm-run-all --parallel dev:react dev:electron convex",
		"build": "tsc -b && vite build",
		"lint": "tsc --noEmit && npx @biomejs/biome check --write",
		"transpile:electron": "npx tsc --project src/electron/tsconfig.json && node -e 'const fs = require(\"fs\"); const paths=[[\"dist-electron/electron/main.js\",\"dist-electron/main.cjs\"],[\"dist-electron/electron/preload.js\",\"dist-electron/preload.cjs\"]]; for(const [src,dest] of paths){ if(!fs.existsSync(src)){ console.warn(src + \" not found, skipping rename\"); continue; } try{ fs.renameSync(src,dest); }catch(e){ console.error(\"Rename failed for\",src, e); process.exit(1); } }'",
		"preview": "vite preview",
		"convex": "npx convex dev"
	},
	"dependencies": {
		"@auth/core": "^0.37.4",
		"@convex-dev/auth": "^0.0.88",
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@radix-ui/react-alert-dialog": "^1.1.14",
		"@radix-ui/react-checkbox": "^1.3.2",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-menubar": "^1.1.15",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-toggle": "^1.1.9",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@slate-yjs/core": "^1.0.2",
		"@slate-yjs/react": "^1.1.0",
		"@tailwindcss/vite": "^4.1.11",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"convex": "^1.25.4",
		"date-fns": "^4.1.0",
		"filenamify": "^6.0.0",
		"lucide-react": "^0.539.0",
		"next-themes": "^0.4.6",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"slate": "^0.118.0",
		"slate-history": "^0.113.1",
		"slate-react": "^0.117.4",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"use-debounce": "^10.0.5",
		"y-indexeddb": "^9.0.12",
		"yjs": "^13.6.27"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/node": "^24.2.1",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@vitejs/plugin-react": "^5.0.0",
		"babel-plugin-react-compiler": "^19.1.0-rc.2",
		"cross-env": "^10.0.0",
		"electron": "^37.2.6",
		"globals": "^16.3.0",
		"npm-run-all": "^4.1.5",
		"tw-animate-css": "^1.3.6",
		"typescript": "~5.9.2",
		"vite": "^7.1.2"
	}
}
